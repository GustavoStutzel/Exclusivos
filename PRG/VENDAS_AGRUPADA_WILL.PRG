DECLARE @DATA_INI DATETIME
DECLARE @DATA_FIM DATETIME

SELECT @DATA_INI = '20090701'
SELECT @DATA_FIM = '20111231'

SELECT PRODUTO,DESC_PRODUTO,LINHA,GRUPO_PRODUTO,QTDE_VENDIDA,PRECO_BRUTO,PRECO_LIQUIDO,PRECO1 AS CUSTO,COLECAO, MES_VENDA FROM
(SELECT A.*,B.DESC_PRODUTO,LINHA,GRUPO_PRODUTO,CATEGORIA_PRODUTO AS COLECAO, D.PRECO1 FROM
(SELECT PRODUTO,PRECO_LIQUIDO, (PRECO_LIQUIDO+DESCONTO_ITEM) AS PRECO_BRUTO ,SUM(QTDE) AS QTDE_VENDIDA, 
CONVERT(CHAR(2),MONTH(DATA_VENDA))+'/'+CONVERT(CHAR(4),YEAR(DATA_VENDA)) AS MES_VENDA
FROM LOJA_VENDA_PRODUTO
WHERE DATA_VENDA BETWEEN @DATA_INI AND @DATA_FIM
GROUP BY PRODUTO, PRECO_LIQUIDO, DESCONTO_ITEM,CONVERT(CHAR(2),MONTH(DATA_VENDA))+'/'+CONVERT(CHAR(4),YEAR(DATA_VENDA))) A
JOIN PRODUTOS B
ON A.PRODUTO = B.PRODUTO
JOIN PRODUTOS_CATEGORIA C
ON B.COD_CATEGORIA = C.COD_CATEGORIA
LEFT JOIN PRODUTOS_PRECOS D
ON A.PRODUTO = D.PRODUTO
WHERE D.CODIGO_TAB_PRECO = 'CT') A
ORDER BY PRODUTO,MES_VENDA


ENDTEXT 

